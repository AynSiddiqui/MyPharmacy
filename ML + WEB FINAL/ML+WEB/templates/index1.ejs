$(document).ready(function(){
        $(".rating").each(function(){
            var ratingContent = $(this).html();
            var ratingScore = parseInt(ratingContent*20, 10);
            var scoreClass =
                ratingScore < 40 ? "bad" : ratingScore < 60 ? "meh" : "good";
            $(this).addClass(scoreClass);
            var ratingColor = $(this).css("background-color");
            var gradient = `background: conic-gradient(${ratingColor} ${ratingScore}%, transparent 0 100%)`;
            $(this).attr("style", gradient);
            $(this).html(`<span>${ratingScore}% ${
                ratingContent.indexOf("%") >= 0 ? "<small>%</small>" : ""
            }</span>`);
        });
    });
</script>
<script>
  function redirectAndScroll(divId) {
    window.location.replace("http://localhost:5000");
    setTimeout(function() {
      $('html, body').animate({
        scrollTop: $("#" + divId).offset().top
      }, 1000);
    }, 0);
  }
</script>

